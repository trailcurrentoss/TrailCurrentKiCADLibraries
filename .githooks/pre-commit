#!/bin/bash
# Pre-commit hook for TrailCurrentKiCADLibraries
# Prevents accidental commits of personal paths, credentials, or sensitive data

set -e

REPO_ROOT=$(git rev-parse --show-toplevel)
STAGED_FILES=$(git diff --cached --name-only)

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

VIOLATIONS_FOUND=0

# Check for personal filesystem paths
check_personal_paths() {
    local file=$1

    # Skip binary files
    if file "$file" | grep -q binary; then
        return
    fi

    # Patterns to detect personal paths
    local patterns=(
        '/media/dave'
        '/home/[a-z]'
        '/Users/'
        'C:\\Users\\'
    )

    for pattern in "${patterns[@]}"; do
        if grep -q "$pattern" "$file" 2>/dev/null; then
            # Allow in examples marked as BAD or in documentation patterns
            if ! grep "$pattern" "$file" | grep -q "BAD\|bad\|DANGER\|example\|template\|pattern"; then
                echo -e "${RED}✗ Personal path detected in $file: $pattern${NC}"
                VIOLATIONS_FOUND=1
            fi
        fi
    done
}

# Check for credentials and secrets
check_credentials() {
    local file=$1

    if file "$file" | grep -q binary; then
        return
    fi

    # Skip known safe files
    if [[ "$file" == *".md" ]] && [[ "$file" == *"docs/"* ]]; then
        return
    fi

    local patterns=(
        'password[[:space:]]*='
        'secret[[:space:]]*='
        'token[[:space:]]*='
        'api_key[[:space:]]*='
        'AWS_SECRET'
        'GITHUB_TOKEN'
        'BEGIN RSA PRIVATE KEY'
        'BEGIN PRIVATE KEY'
    )

    for pattern in "${patterns[@]}"; do
        if grep -i "$pattern" "$file" 2>/dev/null | grep -qv "example\|Example\|template\|Template"; then
            echo -e "${RED}✗ Potential credential detected in $file: $pattern${NC}"
            VIOLATIONS_FOUND=1
        fi
    done
}

# Check for CLAUDE.md (should not be committed)
check_local_files() {
    local file=$1

    if [[ "$file" == "CLAUDE.md" ]]; then
        echo -e "${RED}✗ CLAUDE.md should not be committed (use .gitignore)${NC}"
        VIOLATIONS_FOUND=1
    fi

    if [[ "$file" == .claude* ]]; then
        echo -e "${RED}✗ .claude/ folder should not be committed${NC}"
        VIOLATIONS_FOUND=1
    fi
}

# Main checks
for file in $STAGED_FILES; do
    [ -f "$file" ] || continue

    check_personal_paths "$file"
    check_credentials "$file"
    check_local_files "$file"
done

# Report results
if [ $VIOLATIONS_FOUND -eq 0 ]; then
    echo -e "${GREEN}✓ Pre-commit checks passed${NC}"
    exit 0
else
    echo -e "${RED}"
    echo "================================================"
    echo "PRE-COMMIT CHECK FAILED"
    echo "================================================"
    echo "Violations found in staged files."
    echo ""
    echo "Please review the errors above and remove:"
    echo "  - Personal file paths (/media/dave, /home/user, etc.)"
    echo "  - Credentials and secrets"
    echo "  - Personal information"
    echo ""
    echo "Use 'git diff --cached' to review staged changes"
    echo "Use 'git reset HEAD <file>' to unstage a file"
    echo "================================================"
    echo -e "${NC}"
    exit 1
fi
